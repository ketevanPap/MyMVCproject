@model IEnumerable<MyMVCproject.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<p>
    <input type="button" value="New Movie" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("New", "Movie") + "'");" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Movie")
        </th>
        <th>
            @Html.Label("Ganre")
        </th>
    </tr>

    @foreach (var m in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(m.Name, "Edit", "Movie", new { id = m.Id }, null)
            </td>
            <td>
                @m.Genre.Name
            </td>
        </tr>
    }
</table>

@model MyMVCproject.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "Save";
}

@if (Model.Movie == null)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}
<br />
<br />

@using (Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Name)
        @Html.TextBoxFor(model => model.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Movie.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.RelaseDate)
        @Html.TextBoxFor(model => model.Movie.RelaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Movie.RelaseDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Genres)
        @Html.DropDownListFor(model => model.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(model => model.Movie.Id)
    <button type="submit" class="btn btn-success">Save</button>
    <br />
    <br />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please Fix errors.", new { @class = "text-danger" })
    <br />
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}  